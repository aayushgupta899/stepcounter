<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:text="The 3D acceleration values are"
            android:layout_width="224dp"
            android:layout_height="28dp"
            android:id="@+id/textView1"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.098"
            app:layout_constraintVertical_bias="0.051"/>
    <TextView
            android:layout_width="230dp"
            android:layout_height="34dp"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="@+id/textView1"
            app:layout_constraintTop_toBottomOf="@+id/textView1" android:layout_marginTop="20dp"
            app:layout_constraintEnd_toEndOf="@+id/textView1"/>
    <TextView
            android:text="The Shake Detector Detects"
            android:layout_width="226dp"
            android:layout_height="30dp"
            android:id="@+id/textView3" app:layout_constraintStart_toStartOf="@+id/textView2"
            app:layout_constraintEnd_toEndOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginTop="20dp"/>
    <TextView
            android:layout_width="224dp"
            android:layout_height="32dp"
            android:id="@+id/textView4" app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/textView3" app:layout_constraintTop_toBottomOf="@+id/textView3"
            android:layout_marginTop="28dp" app:layout_constraintHorizontal_bias="0.0"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText1"
            app:layout_constraintStart_toStartOf="@+id/textView4" app:layout_constraintEnd_toEndOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" android:layout_marginTop="80dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button1"
            android:onClick="onStartClick"
            app:layout_constraintStart_toStartOf="@+id/editText1" app:layout_constraintEnd_toStartOf="@+id/button2"
            app:layout_constraintTop_toBottomOf="@+id/editText1" android:layout_marginTop="16dp"
            app:layout_constraintHorizontal_bias="0.486"/>
    <Button
            android:text="Stop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:onClick="onStopClick"
            app:layout_constraintEnd_toEndOf="@+id/editText1" app:layout_constraintTop_toBottomOf="@+id/editText1"
            android:layout_marginTop="16dp"/>
    <TextView
            android:layout_width="208dp"
            android:layout_height="33dp"
            android:id="@+id/textView5" app:layout_constraintStart_toStartOf="@+id/editText1"
            app:layout_constraintEnd_toEndOf="@+id/editText1" app:layout_constraintTop_toBottomOf="@+id/editText1"
            android:layout_marginTop="80dp" app:layout_constraintHorizontal_bias="1.0"/>
    <Button
            android:text="Show Barometer Data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button3" app:layout_constraintStart_toStartOf="@+id/textView5"
            app:layout_constraintEnd_toEndOf="@+id/textView5" app:layout_constraintTop_toBottomOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.562" android:layout_marginTop="12dp"
            android:onClick="showBarometerData"/>
    <TextView
            android:layout_width="221dp"
            android:layout_height="29dp"
            android:id="@+id/textView6" app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintEnd_toEndOf="@+id/textView4" app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintBottom_toTopOf="@+id/editText1"/>
</androidx.constraintlayout.widget.ConstraintLayout>